<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NDLoginSingupWithActivitiy">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/buttons_layout"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/img_nd_logo"
            android:layout_width="180dp"
            android:layout_marginTop="70dp"
            android:layout_height="180dp"
            android:padding="15dp"
            android:src="@drawable/nd_logo"
            />

    </RelativeLayout>
    <LinearLayout

        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:id="@+id/btn_nd_signin_email"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"

            android:background="@drawable/button_drawable_selector"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/mail_white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Sign in with Email"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_nd_google"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"

            android:background="@drawable/rounder_button_pressed_white"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/google"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Sign in with Google"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/black"

                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/btn_nd_facebook"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"

            android:background="@drawable/rounder_button_pressed_white"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/facebook"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Sign in with Facebook"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/black"

                />

        </LinearLayout>









        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"


            >

            <app.rubbickcube.sido.fonts.robotoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"

                android:layout_marginTop="40dp"
                android:textColor="@color/appBlack"
                android:text="Don't have an account?"
                />
            <app.rubbickcube.sido.fonts.robotoRegular
                android:id="@+id/btn_nd_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:textColor="#D7533F"
                android:layout_marginBottom="40dp"
                android:text="Signup"

                />
        </LinearLayout>



    </LinearLayout>



</RelativeLayout>