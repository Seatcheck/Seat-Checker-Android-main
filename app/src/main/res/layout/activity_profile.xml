    <RelativeLayout
        android:id="@+id/firstrt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_bg_orange">
        <ImageView
            android:id="@+id/nd_backbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/back_arrow"

            android:layout_marginLeft="18dp"

            />
        <ImageView
            android:id="@+id/nd_edit_profile"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginTop="18dp"
            android:src="@drawable/edit_profile"
            android:scaleType="centerCrop"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="55dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imgrt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seatcheck_live_user_dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgrt">

        <TextView
            android:id="@+id/seatcheck_other_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:textColor="@color/appBlack"
            android:textSize="22sp"
            android:fontFamily="@font/montserratsemibold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relyt">


        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/app_bar_layout"
                android:visibility="gone" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bg_layer_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@color/app_orange" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include

                            layout="@layout/nd_profile_activity" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/dp_image_profile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="14dp"
                                android:scaleType="centerCrop" />


                        </RelativeLayout>


                        <app.rubbickcube.sido.fonts.robotoLight
                            android:id="@+id/dp_name_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Yasir Ameen"
                            android:textColor="@color/ef_white"
                            android:textSize="24sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <RatingBar
                                android:id="@+id/ratingBar_rating_stars_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="4"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/tv_about_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="left"
                    android:text="about"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_status_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="left"
                    android:text="status"
                    android:textColor="@color/app_orange"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/email_grey" />

                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"

                        android:gravity="left|center"
                        android:text="email"
                        android:textColor="@color/lightgray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/tv_phone_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="left"
                        android:text="phone"
                        android:textColor="@color/darkgray"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center"
                    android:text="My Review"
                    android:textColor="@color/darkgray"
                    android:textSize="16sp" />

                <fragment
                    android:id="@+id/fooFragment"
                    android:name="app.rubbickcube.seatcheck.fragments.ReviewFragments"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout

                android:id="@+id/sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tabMode="fixed" />


            <androidx.viewpager.widget.ViewPager

                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>