<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/drawerbg"
            android:layout_width="match_parent"
            android:layout_weight=".7"
            android:gravity="center"

            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="gone"
                android:src="@drawable/logo"
                />

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp_drawer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                />

            </RelativeLayout>

            <TextView
                android:id="@+id/name_drawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="Yasir Ameen"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratsemibold"
                android:textSize="21sp"
                />
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:layout_alignParentRight="true"
                    android:id="@+id/ratingBar_rating_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:isIndicator="true"

                    android:visibility="visible"
                    android:theme="@style/RatingBar"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:stepSize="1.0" />
            </RelativeLayout>

        </LinearLayout>


    <RelativeLayout

        android:orientation="vertical"
        android:background="@color/nd_colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/img_ll_profile"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Profile"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_chat"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/img_ll_nd_chat"
                    android:layout_width="40dp"
                    android:padding="6dp"


                    android:layout_height="match_parent" />

                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Explore People"
                    android:layout_marginLeft="16dp"
                    android:textSize="22sp"
                    />

            </LinearLayout>



            <LinearLayout

                android:visibility="gone"
                android:id="@+id/ll_contacts"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/img_ll_nd_contacts"
                    android:layout_width="40dp"
                    android:padding="6dp"


                    android:layout_height="match_parent" />

                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Contacts"
                    android:layout_marginLeft="16dp"
                    android:textSize="22sp"
                    />

            </LinearLayout>




            <LinearLayout

                android:id="@+id/ll_setting"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_ll_settings"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"


                    android:padding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chats"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/chat"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Chat"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/help"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Help"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratsemibold"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_privacypolicy"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/privacypolicy"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/nd_text_color"
                    android:gravity="center_vertical"
                    android:text="Privacy Policy"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratsemibold"
                    />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
             <LinearLayout
                 android:id="@+id/invitefriends"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#f9ded8"
                 >


             <LinearLayout
                 android:layout_marginTop="20dp"
                 android:layout_marginBottom="20dp"
                 android:layout_marginLeft="20dp"
                 android:id="@+id/ll_invite"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView

                     android:id="@+id/img_ll_invite"
                     android:layout_width="40dp"
                     android:padding="8dp"
                     android:layout_height="match_parent" />

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     >


                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:textColor="@color/nd_text_color"
                         android:gravity="center_vertical"
                         android:text="Invite Friends"
                         android:layout_marginLeft="16dp"
                         android:fontFamily="@font/montserratsemibold"
                         android:textSize="16sp"
                         />


                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:textColor="@color/nd_text_color"
                     android:gravity="center_vertical"
                     android:maxLines="2"
                     android:text="Share the app with friends \n and invite them on!"
                     android:layout_marginLeft="16dp"
                     android:fontFamily="@font/montserratregular"
                     android:textSize="14sp"
                     />

                 </LinearLayout>

             </LinearLayout>
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/ll_logout"
                 android:layout_marginLeft="20dp"
                 android:layout_below="@+id/ll_logout"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="50dp">
                 <ImageView
                     android:id="@+id/img_ll_logut"
                     android:layout_width="40dp"
                     android:padding="8dp"
                     android:layout_height="match_parent" />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:textColor="@color/nd_text_color"
                     android:gravity="center_vertical"
                     android:text="Logout"
                     android:layout_marginLeft="16dp"
                     android:fontFamily="@font/montserratsemibold"
                     android:textSize="16sp"
                     />

             </LinearLayout>
         </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>