<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <app.rubbickcube.sido.fonts.robotoLight

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000"
                android:paddingRight="10dp"
                android:text="How many Guests are joining including you?"
                android:background="@color/nd_light_ping"
                android:textSize="14sp"
                android:gravity="center"
                />

                <ImageView
                    android:id="@+id/close_dialog"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cancel_white"
                    />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/radio_leaving"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sorry I'm leaving"
                    android:textSize="18sp"
                    />
                <RadioButton
                    android:id="@+id/radio_restaurant_close"

                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:text="Restaurant about to close"
                    android:textSize="18sp"

                    />
                <RadioButton
                    android:id="@+id/radio_other"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Other"
                    android:textSize="18sp"

                    android:layout_marginTop="6dp"

                    />
            </LinearLayout>



            <Button
                android:id="@+id/btn_done"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Done"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"
                android:layout_marginTop="26dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/stroke_drawabe_orange"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>