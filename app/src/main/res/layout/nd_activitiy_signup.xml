<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ef_white"
    tools:context=".ActivityLogin">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="16dp"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_back_arrow_new"/>
            <app.rubbickcube.sido.fonts.robotoLight
                android:layout_width="match_parent"
                android:text="Sign Up"
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/appBlack"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_seat_icon"/>


        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <app.rubbickcube.sido.fonts.robotoThin
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textSize="12sp"

                    android:textColor="@color/appBlack"
                    />

                <app.rubbickcube.sido.fonts.robotoThin
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"

                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content"
                    android:text="DISPLAY NAME"
                    android:textColor="@color/appBlack"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_height="35dp"
                    android:textSize="14sp"
                    android:hint="Type here..."
                    android:padding="6dp"
                    android:background="@drawable/nd_edittext_drawable"

                    />

                <EditText
                    android:id="@+id/txt_displayname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Type here..."
                    android:lines="1"
                    android:singleLine="true"
                    android:padding="6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="35dp"
                    android:background="@drawable/nd_edittext_drawable"

                    />


            </LinearLayout>

            <app.rubbickcube.sido.fonts.robotoThin
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="12sp"

                android:layout_marginTop="6dp"
                android:textColor="@color/appBlack"

                />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:singleLine="true"

                android:hint="Type here..."
                android:lines="1"
                android:layout_marginTop="10dp"

                android:padding="6dp"
                android:layout_height="35dp"
                android:background="@drawable/nd_edittext_drawable"

                />

            <app.rubbickcube.sido.fonts.robotoThin
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOBILE"
                android:textSize="12sp"

                android:layout_marginTop="6dp"
                android:textColor="@color/appBlack"

                />

            <EditText
                android:id="@+id/txt_mobile"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:hint="Type here..."
                android:singleLine="true"
                android:layout_marginTop="10dp"

                android:padding="6dp"
                android:layout_height="35dp"
                android:background="@drawable/nd_edittext_drawable"

                />

            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <app.rubbickcube.sido.fonts.robotoThin
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:textSize="12sp"

                    android:layout_height="wrap_content"
                    android:text="PASSWORD"
                    android:textColor="@color/appBlack"
                    />

                <app.rubbickcube.sido.fonts.robotoThin
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content"
                    android:text="CONFIRM PASSWORD"
                    android:textColor="@color/appBlack"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_pass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_height="35dp"
                    android:textSize="14sp"
                    android:hint="Type here..."
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif"
                    android:padding="6dp"
                    android:background="@drawable/nd_edittext_drawable"

                    />

                <EditText
                    android:id="@+id/txt_confirmpass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"

                    android:inputType="textPassword"
                    android:hint="Type here..."
                    android:singleLine="true"

                    android:padding="6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="35dp"
                    android:background="@drawable/nd_edittext_drawable"

                    />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Sign Up"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textAllCaps="false"
            android:background="@drawable/button_drawable_selector"
            android:textColor="@android:color/white"
            />

        <app.rubbickcube.sido.fonts.robotoThin
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/appBlack"

            />

    </LinearLayout>
</RelativeLayout>