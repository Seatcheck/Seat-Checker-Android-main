<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.ActivityShowInvites">
    <RelativeLayout
        android:id="@+id/app_bar"

        android:layout_width="match_parent"
        android:layout_height="56dp">

        <include
            layout="@layout/app_bar_layout"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/app_bar"
        android:id="@+id/no_invites_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <app.rubbickcube.sido.fonts.robotoThin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Invites"
            android:gravity="center"
            android:textSize="28sp"
            />

        <app.rubbickcube.sido.fonts.robotoLight
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="When you will have invites, you will them here"
            android:gravity="center"
            android:textSize="16sp"
            />

    </LinearLayout>


    <ListView
        android:id="@+id/request_lists"
        android:visibility="gone"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>