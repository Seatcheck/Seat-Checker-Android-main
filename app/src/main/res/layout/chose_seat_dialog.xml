<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <app.rubbickcube.sido.fonts.robotoLight
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000"
                android:text="How many Guests are joining including you?"
                android:background="@color/nd_light_ping"
                android:textSize="14sp"
                android:gravity="center"
                />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"

                android:layout_height="match_parent">
                <app.rubbickcube.sido.fonts.robotoLight
                    android:id="@+id/btn_seat_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"

                    android:background="@drawable/circular_drawable"
                    android:text="1"/>
                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/btn_seat_4"

                    android:layout_marginTop="20dp"
                    android:background="@drawable/circular_drawable"

                    android:text="4"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/btn_seat_2"
                    android:background="@drawable/circular_drawable"
                    android:text="2"/>
                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circular_drawable"
                    android:id="@+id/btn_seat_5"

                    android:text="5"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/btn_seat_3"

                    android:background="@drawable/circular_drawable"
                    android:text="3"/>
                <app.rubbickcube.sido.fonts.robotoLight
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circular_drawable"
                    android:id="@+id/btn_seat_6"

                    android:text="6"/>


            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                />

        </LinearLayout>


            <Button
                android:id="@+id/btn_done_seats"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Done"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/stroke_drawabe_orange"
                />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>